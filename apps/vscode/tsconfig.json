{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": ["ES2020"],
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@better-ts-errors/formatter": ["../../packages/formatter/src"],
      "~/*": ["src/*"]
    }
  }
}